{
    "name": "AppTv",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": ["declarativeContent", "storage", "tabs", "activeTab", "http://*/*", "https://*/*"],
    "background": {
      "scripts": ["background.js","js/socket.io.js"],
      "persistent": false
    },
    "icons": {
        "128": "avatar.png"
    },
    "browser_action": {
        "default_title": "",
        "default_icon": "avatar.png"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self'; object-src 'self'"
  }
